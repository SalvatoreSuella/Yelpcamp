<% layout("layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center mb-5 display-3">Edit Campground</h1>

    <div class="col-md-6 offset-md-3">

        <form method="POST" action="/campgrounds/<%= campground.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="form-floating mb-3">
                <input type="text" class="form-control" placeholder="Camp name" id="title" name="campground[title]" value="<%= campground.title %>" required>
                <label for="title">Title</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" placeholder="location" id="location" name="campground[location]" value="<%= campground.location %>" required>
                <label for="location">Location</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" placeholder="0.00"  id="price" name="campground[price]" value="<%= campground.price %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="form-floating mb-3">
                <textarea  style="height: 100px" type="text" class="form-control" placeholder="description" id="description" name="campground[description]" required><%= campground.description %></textarea>
                <label for="description">Description</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Add image(s)...</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>

            <div class="mb-3">
                <% campground.images.forEach( (img, i) => { %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }); %>
            </div>

            <button type="submit" class="btn btn-info">Update campground</button>
        
        </form>

    </div>
</div>    
    
